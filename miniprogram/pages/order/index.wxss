

.order_input_body{
    padding:0 30rpx;
    border-top:1rpx solid #eee;
}
.order_input{
    display: block;
    width: 100%; padding:10rpx 0;

    border-bottom:1rpx solid #eee;
}
.name{
    font-size: 32rpx !important;
}
.__input__{
    font-size: 32rpx !important;
}


.order_input_body .btn{
    margin-top: 50rpx;
    border-radius: 100rpx;
}
.input_info{
    padding:30rpx 0;
    font-size:24rpx;
    font-weight:400;
    color:rgba(204,204,204,1);
}

.jg{
    width: 100%;
    height:22rpx;
    background:rgba(242,242,242,1);
}


.address{
    width: 690rpx; margin: 0 auto;
    padding:20rpx 0 40rpx 0;
    border-bottom:1rpx solid #eee;
    margin-bottom: 20rpx;
}
.address_no{
    width: 45rpx; height: 45rpx;
    border-radius: 45rpx;
    background: #ccc;
    color:#fff;
    margin-right: 30rpx;
}
.address_name{
    height: 45rpx;
    font-size:32rpx;
    color:rgba(69,69,69,1);
}
.address_address{
    padding-top: 20rpx;
}
.address_address,
.address_phone{
    font-size:24rpx;
    color:rgba(118,118,118,1);
}