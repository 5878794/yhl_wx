

.class_nav{
    margin-top: 40rpx;
    width: 100%; height: 110rpx;
}
.class_nav_body{
    /*display: block;*/
}
.class_nav_item{
    display: inline-block;
    position: relative;
    padding:0 10rpx;
    height: 110rpx;
}
.class_nav_text{
    display: inline-block;
    padding:0 30rpx;
    font-weight: bold;
    height: 30rpx;
    line-height: 30rpx;
    border-right:1px solid #333;
    margin-top: 30rpx;
}
.class_nav_border{
    position: absolute;
    left:20rpx; right:20rpx; bottom:12rpx;
    height: 12rpx;
    background: #47d7f7;
    border-radius: 12rpx;
    display: none;
}
.class_nav_body .select .class_nav_border{
    display: inline-block;
}


.class_info_body{
    background: #f9fafb; position: relative;
}
.class_info_body_left{
    background: #e4e5e6;
    width: 200rpx;
    position: absolute;
    left:0; top:0; bottom:0;
}
.class_lv2_item{
    width: 100%; height: 110rpx;
    position: relative;
    font-weight: 300;
}
.class_info_body_left .select{
    background: #f9fafb;
    font-weight: bold;
    color: #333;
}
.class_info_body_left .select:before{
    content: ''; display: block;
    position: absolute; left:0; top:50%;
    width: 11rpx; height: 64rpx; margin-top: -32rpx;
    background: #053540;
    border-radius: 11rpx;
}

.class_info_body_right{
    padding-left:240rpx;
    min-height:880rpx;
}
.class_lv3_item{
    width: 100%;
    height: 110rpx;
    border-bottom:1rpx solid #eff0f1;
}
.class_lv3_no{
    font-size: 24rpx;
    padding:5rpx 15rpx;
    display: inline-block;
    border-radius: 50rpx;
    background: #cdcecf;
    margin-right: 30rpx;
    color:#fff;
}