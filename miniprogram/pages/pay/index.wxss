page{
    background: #f2f2f4;
}

.my_title{
    width: 100%;
    padding:0 30rpx;
    height: 220rpx;
    background: #fff;
    overflow: hidden;
}
.my_title image{
    display: block;
    width: 130rpx;height: 130rpx;
    border-radius: 130rpx;
    border:8rpx solid #d9dadb;
}
.my_title_name{
    font-weight: bold;
    font-size: 34rpx;
    padding:0 20rpx;
}


.my_title_row{
    padding:0 30rpx;
    height: 110rpx;
    background: #f2f2f4;
    font-size: 32rpx; color: #333;
    font-weight: bold;
}
.my_title_row image{
    display: block; width: 49rpx; height: 43rpx;
    margin-right: 20rpx;
}

.pay_body{
    padding:30rpx 30rpx; background: #fff;
}
.pay_body_item{
    position: relative;
    width: 100%; padding:0 20rpx;
    height: 80rpx; border:1rpx solid #ccc;
    margin: 20rpx 0;
}
.pay_body_item image{
    display: block; width: 48rpx; height: 48rpx;
    margin: 0 20rpx;
}
.pay_body .select{
    border:1px solid #eee;
    background: #eee;
}

.pay_choose{
    position: relative;
    width: 690rpx;
    margin: 0 auto;
    background: green;
    height: 80rpx;
    padding-right: 30rpx;
    color: #fff;
    font-size: 32rpx;
}
.pay_choose image{
    display: block;
    width: 66rpx; height: 51rpx;
    margin-right: 40rpx;
}

.button_top_jg{
    width: 100%; height: 60rpx;
}